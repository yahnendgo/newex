
	
<%= render @post %>
	<br><br>
		<%= form_for @comment, url: post_comments_path(@post) do |f| %>
		<%= f.label :comment, 'Comment' %><br>
		<%= f.text_field :comment %><br>
		<br>
		<%= f.submit 'Post Comment' %>
	<h3><u>
		Comments:
	</u></h3>
		<% @post.comments.each do |comment| %>
		<div>
		<%= comment.user.fname %>
		<br>
		<%= comment.comment %>
		<br>
		<%= link_to "Delete Comment", post_comment_path(@post.id, comment.id), method: :delete, remote: true, class:  "delete-comment" %>
		</div>
		<br><br>
	<% end %>
		<% end %>